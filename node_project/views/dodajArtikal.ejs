<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <title>Home</title>
</head>
<body>
<div><%- include('header') -%></div>


    <h1>Kupac</h1>





    <form action="/artikal/dodajArtikal" method="post" enctype="multipart/form-data">

        <div>
            <label style="color: black">Ime Trgovine:</label>
            <select name="trgovina_id" >
                <% trgovina.forEach(function(data){ %>
                    <option value="<%= data._id%>"><%= data.name %></option>
                <%})%>
            </select>

        </div>
        <div class="form-group">
            <label >Choose ArticleImage:</label>
            <input
                    class="form-control"
                    type="file"
                    accept="image/*"
                    name="image"

            />
        </div>

        <div class="form-group">
            <label >Ime Artikla:</label>
            <input type="text" name="name">
        </div>


        <div class="form-group">
            <label >Kratak Opis:</label>
            <input type="text" name="kratkiOpis">
        </div>
        <div class="form-group">
            <label >Kategorija:</label>
            <select name="category">
                <% kategorijaa.forEach(function(data){ %>
                    <option value="<%= data.kategorija%>"><%= data.kategorija %></option>
                <%})%>
            </select>
        </div>
        <div class="form-group">
            <label >Kolicina:</label>
            <input type="number" name="kolicina">
        </div>
        <div class="form-group">
            <label >Cijena:</label>
            <input type="text" name="cijena">
        </div>



        <div>
            <input type="submit" value="Dodaj" />
        </div>
    </form>


</body>

</html>